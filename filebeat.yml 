filebeat.inputs:
  - type: log
    enabled: true
    paths:
      - /app/logs/*.log   # внутри контейнера, а снаружи это ./logs/app.log

output.elasticsearch:
  hosts: ["http://elasticsearch:9200"]

setup.kibana:
  host: "kibana:5601"

logging:
  level: info
  to_files: true
  files:
    path: /usr/share/filebeat/logs
    name: filebeat
    keepfiles: 7
    permissions: 0644
